<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
>
    <persistence-unit name="WSInquisition" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/wsinquisition</jta-data-source>

        <!-- List all entity classes -->
        <class>edu.anxolerd.inquisition.entities.Address</class>
        <class>edu.anxolerd.inquisition.entities.ContactInfo</class>
        <class>edu.anxolerd.inquisition.entities.Crime</class>
        <class>edu.anxolerd.inquisition.entities.EmailRecord</class>
        <class>edu.anxolerd.inquisition.entities.Inquisitor</class>
        <class>edu.anxolerd.inquisition.entities.Interest</class>
        <class>edu.anxolerd.inquisition.entities.Investigation</class>
        <class>edu.anxolerd.inquisition.entities.InvestigationLogRecord</class>
        <class>edu.anxolerd.inquisition.entities.InvestigationNote</class>
        <class>edu.anxolerd.inquisition.entities.Person</class>
        <class>edu.anxolerd.inquisition.entities.PersonNote</class>
        <class>edu.anxolerd.inquisition.entities.PhoneRecord</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="script"/>
            <property name="javax.persistence.schema-generation.drop-source" value="script"/>
            <property name="javax.persistence.schema-generation.create-script-source" value="META-INF/create.sql"/>
            <property name="javax.persistence.schema-generation.drop-script-source" value="META-INF/drop.sql"/>
        </properties>
    </persistence-unit>
</persistence>