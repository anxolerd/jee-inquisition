<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
>
    <persistence-unit name="WSInquisition">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>edu.anxolerd.inquisition.model.Address</class>
        <class>edu.anxolerd.inquisition.model.ContactInfo</class>
        <class>edu.anxolerd.inquisition.model.Crime</class>
        <class>edu.anxolerd.inquisition.model.EmailRecord</class>
        <class>edu.anxolerd.inquisition.model.Inquisitor</class>
        <class>edu.anxolerd.inquisition.model.Interest</class>
        <class>edu.anxolerd.inquisition.model.Investigation</class>
        <class>edu.anxolerd.inquisition.model.InvestigationLogRecord</class>
        <class>edu.anxolerd.inquisition.model.InvestigationNote</class>
        <class>edu.anxolerd.inquisition.model.Person</class>
        <class>edu.anxolerd.inquisition.model.PersonNote</class>
        <class>edu.anxolerd.inquisition.model.PhoneRecord</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="script"/>
            <property name="javax.persistence.schema-generation.drop-source" value="script"/>
            <property name="javax.persistence.schema-generation.create-script-source" value="META-INF/create.sql"/>
            <property name="javax.persistence.schema-generation.drop-script-source" value="META-INF/drop.sql"/>
        </properties>
    </persistence-unit>
</persistence>